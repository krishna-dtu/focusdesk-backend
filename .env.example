# ============================================
# GATE SECRET KEY (for gate API authentication)
# ============================================
GATE_SECRET_KEY=YOUR_GATE_SECRET_KEY

# ============================================
# MONGODB CONFIGURATION
# ============================================
# Local dev (if MongoDB installed locally):
# MONGODB_URI=mongodb://localhost:27017/focusdesk_db
# Production (MongoDB Atlas):
MONGODB_URI=YOUR_MONGODB_ATLAS_URI

# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=5000

# ============================================
# JWT SECRET (for QR token generation)
# ============================================
JWT_SECRET=YOUR_JWT_SECRET

# ============================================
# REDIS CONFIGURATION (Optional)
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# FIREBASE ADMIN (for user authentication)
# ============================================
FIREBASE_PROJECT_ID=YOUR_FIREBASE_PROJECT_ID
FIREBASE_CLIENT_EMAIL=YOUR_FIREBASE_CLIENT_EMAIL
FIREBASE_PRIVATE_KEY="YOUR_FIREBASE_PRIVATE_KEY_WITH_NEWLINES_REPLACED_BY_\\n"

# ============================================
# MYSQL / SEQUELIZE (Optional - legacy scripts)
# ============================================
DB_NAME=YOUR_DB_NAME
DB_USER=YOUR_DB_USER
DB_PASS=YOUR_DB_PASS
DB_HOST=YOUR_DB_HOST
DB_PORT=3306
